{
  "extends": "expo/tsconfig.base",
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "__tests__/**/*-test.ts"
  ],
  "compilerOptions": {
    "module": "esnext",
    "skipLibCheck": true,
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "assets": [
        "assets/*"
      ],
      "*": [
        "src/*"
      ]
    }
  },
  "jsx": "react",
  "allowJs": true,
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true
}